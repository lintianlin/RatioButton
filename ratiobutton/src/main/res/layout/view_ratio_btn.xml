<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/ll_big_unit_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_btn_big_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@drawable/bg_amount_layout"
            android:divider="@drawable/divider_amount_btn"
            android:focusable="true"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:id="@+id/btn_big_sub"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_amount"
                android:gravity="center"
                android:text="－"
                android:textColor="@color/text_deep_grey" />

            <EditText
                android:id="@+id/tv_big_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@null"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="4"
                android:minWidth="60dp"
                android:text="0" />

            <Button
                android:id="@+id/btn_big_add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_amount"
                android:gravity="center"
                android:text="＋"
                android:textColor="@color/textColor" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_big_unit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:minWidth="30dp"
            android:text="件" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_small_unit_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_btn_small_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@drawable/bg_amount_layout"
            android:divider="@drawable/divider_amount_btn"
            android:focusable="true"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:id="@+id/btn_small_sub"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_amount"
                android:gravity="center"
                android:text="－"
                android:textColor="@color/text_deep_grey" />

            <EditText
                android:id="@+id/tv_small_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@null"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="4"
                android:minWidth="60dp"
                android:text="0" />

            <Button
                android:id="@+id/btn_small_add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_amount"
                android:gravity="center"
                android:text="＋"
                android:textColor="@color/textColor" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_small_unit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:minWidth="30dp"
            android:text="件" />
    </LinearLayout>


</LinearLayout>
